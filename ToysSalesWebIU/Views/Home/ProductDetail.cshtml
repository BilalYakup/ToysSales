@{
    ViewData["Title"] = "ProductDetail";
}

@model ProductDetailVM

<input type="hidden" asp-for="Image" />

<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner bg-light">
                    <div class="carousel-item active">
                        <img class="w-100 h-100" src="~/images/products/@Model.Image" alt="@Model.Name">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.Name</h3>
                <h3 class="font-weight-semi-bold mb-4">Fiyat : @Model.UnitPrice TL</h3>
                <h3 class="font-weight-semi-bold mb-4">Stok Adeti : @Model.UnitStock</h3>
                <h3 class="font-weight-semi-bold mb-4">Eklenme Tarihi : @Model.CreatedDate.ToShortDateString()</h3>
                @if (Model.Status == Data.Entities.Abstract.Status.Active)
                {
                    <h3 class="font-weight-semi-bold mb-4">Durum : Satışta</h3>
                }
                @if (Model.Status == Data.Entities.Abstract.Status.Modified)
                {
                    <h3 class="font-weight-semi-bold mb-4">Durum : Ürün Güncellendi</h3>
                }
                @if (Model.Status == Data.Entities.Abstract.Status.Passive)
                {
                    <h3 class="font-weight-semi-bold mb-4">Durum : Tükendi</h3>
                }
                <h3 class="font-weight-semi-bold mb-4">Kategori : @Model.CategoryName</h3>
                <h3 class="font-weight-semi-bold mb-4"></h3>
                <div class="d-flex align-items-center mb-4 pt-2">
                </div>
            </div>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Ürün Açıklaması</a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->
<!-- Products Start -->
<div class="container-fluid py-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Başka Ürünlere Göz At</span></h2>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                @foreach (var products in Model.Products)
                {
                    <div class="product-item bg-light">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="~/images/products/@products.Image" alt="@products.Name">
                            <div class="product-action"> 
                                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="">@products.Name</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>@products.UnitPrice TL</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Products End -->